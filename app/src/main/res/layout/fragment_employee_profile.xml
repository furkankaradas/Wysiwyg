<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:text="Worker Profile"
            android:textSize="25sp"
            android:textStyle="bold|italic"

            />

        <ImageView
            android:id="@+id/imageField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageField"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:text="Personal Information"
            android:textSize="18sp"
            android:textStyle="bold|italic"

            />

        <TextView
            android:id="@+id/CnameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Name: " />

        <TextView
            android:id="@+id/surnameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CnameField"


            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Surname:"

            />

        <TextView
            android:id="@+id/CemailField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surnameField"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="E-mail:" />

        <TextView
            android:id="@+id/CtaxField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CemailField"


            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="ID:"

            />

        <TextView
            android:id="@+id/BirthDateField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CtaxField"


            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Birth Date:" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BirthDateField"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"


            android:text="Work Plan"
            android:textSize="20sp"
            android:textStyle="bold|italic"

            />

        <TextView
            android:id="@+id/workDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Work Date:" />

        <TextView
            android:id="@+id/workHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workDate"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Work Hours:" />

        <TextView
            android:id="@+id/workField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workHour"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Work Field:" />


        <TextView
            android:id="@+id/dlField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"

            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Driving License:" />

        <TextView
            android:id="@+id/bloodGroupField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dlField"

            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Blood Group:" />

        <TextView
            android:id="@+id/phoneField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bloodGroupField"


            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Phone:" />


        <TextView
            android:id="@+id/genderField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneField"


            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Gender:" />

    </RelativeLayout>
</ScrollView>